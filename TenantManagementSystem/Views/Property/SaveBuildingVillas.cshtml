@model TenantManagementSystem.Models.Property
@{
    ViewBag.Title = "SaveBuildingVillas";
    Layout = "~/Views/Shared/_MasterLayoutPage.cshtml";
}

<!DOCTYPE html>

<h2>Save Building Villas Shop</h2>

@section styles
    {
    <style>
        .field-validation-error {
            color: red;
        }

        .required::after {
            content: "*";
            font-weight: bold;
            color: red;
        }
    </style>
}
 
<section class="wrapper">
    <div class="form-w3layouts">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Save Building Villas
                    </header>
                    <div class="panel-body">
                        <div class="position-center">
                            @{
                                if (ViewBag.Message == null)
                                { }
                                else
                                {
                                    <div class="alert alert-success" role="alert">
                                        <strong>@ViewBag.Message</strong>
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                }
                            }
                            @using (Html.BeginForm(null, null, FormMethod.Post))
                            {

                                <div class="form-group">
                                    @Html.LabelFor(t => t.Name, new { @class = "required" })
                                    @Html.TextBoxFor(t => t.Name, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(t => t.Name)
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(t => t.PropertyType, new { @class = "required" })
                                    @Html.DropDownListFor(t => t.PropertyType, new SelectList(ViewBag.PropertyType, "Id", "PropertyTypeDescription"), new { @class = "form-control" })
                                    @Html.ValidationMessageFor(t => t.PropertyType)
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(t => t.AreaId, "Area", new { @class = "required" })
                                    @Html.DropDownListFor(t => t.AreaId, new SelectList(ViewBag.Area, "Id", "Name"), new { @class = "form-control" })

                                    @Html.ValidationMessageFor(t => t.AreaId)
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(t => t.CityId, "City", new { @class = "required" })
                                    @Html.DropDownListFor(t => t.CityId, new SelectList(ViewBag.City, "Id", "Name"), new { @class = "form-control" })
                                    @Html.ValidationMessageFor(t => t.CityId)
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(t => t.LessorId, "LessorName", new { @class = "required" })
                                    @Html.DropDownListFor(t => t.LessorId, new SelectList(ViewBag.Lessor, "Id", "Name"), "------Select Lesser------", new { @class = "form-control" })

                                    @Html.ValidationMessageFor(t => t.LessorId)
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(t => t.Address)
                                    @Html.TextAreaFor(t => t.Address, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(t => t.Address)
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(t => t.PropertyNumber)
                                    @Html.TextAreaFor(t => t.PropertyNumber, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(t => t.PropertyNumber)
                                </div>
                                @*<div class="form-group">
                @Html.LabelFor(t => t.PropertyType)
                @Html.TextAreaFor(t => t.PropertyType, new { @class = "form-control" })
                @Html.ValidationMessageFor(t => t.PropertyType)
            </div>*@
                                <div class="form-group">
                                    @Html.LabelFor(t => t.BondNumber)
                                    @Html.TextAreaFor(t => t.BondNumber, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(t => t.BondNumber)
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(t => t.BondType)
                                    @Html.TextAreaFor(t => t.BondType, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(t => t.BondType)
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(t => t.GovernmentNumber)
                                    @Html.TextAreaFor(t => t.GovernmentNumber, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(t => t.GovernmentNumber)
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(t => t.PilotNumber)
                                    @Html.TextAreaFor(t => t.PilotNumber, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(t => t.PilotNumber)
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(t => t.Street)
                                    @Html.TextAreaFor(t => t.Street, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(t => t.Street)
                                </div>



                                <button type="submit" class="btn btn-info">Save</button>
                            }
                        </div>

                        <br /><br />



                    </div>
                </section>

            </div>
        </div>
    </div>
</section>

@section scripts
    {
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

    <script>
        document.getElementById('Name').value = '';
        document.getElementById('Address').value = '';
        document.getElementById('PropertyName').value = '';
        document.getElementById('PropertyTypeT').value = '';
        document.getElementById('BondType').value = '';
        document.getElementById('AreaId').value = '';
        document.getElementById('CityId').value = '';
        document.getElementById('LessorId').value = '';
        document.getElementById('BondNumber').value = '';
        document.getElementById('GovernmentNumber').value = '';
        document.getElementById('PilotNumber').value = '';
        document.getElementById('Street').value = '';
    </script>


    <script>
        $().ready(function () {
            $("#Name").on('change', function () {
                var flatname = $(this).val();
                $("#PropertyNumber").val(flatname);
            });
        });
    </script>
}


