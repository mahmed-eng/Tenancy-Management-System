@model  IEnumerable<TenantManagementSystem.Models.Property>
@{
    ViewBag.Title = "ViewShop";
    Layout = "~/Views/Shared/_MasterLayoutPage.cshtml";
}

<h2>View Shop</h2>

<!DOCTYPE html>
<br /><br /><br /><br /><br />
<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <title></title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "SaveShop")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BuildingName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CityName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AreaName)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.ShopTypeId)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BuildingName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CityName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AreaName)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.ShopTypeId)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    @Html.ActionLink("Edit", "EditShop", new { id = item.Id }) |
                    @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                </td>
            </tr>
        }

    </table>
</body>
</html>
