@model TenantManagementSystem.Models.Property
@{
    ViewBag.Title = "Shop";
    Layout = "~/Views/Shared/_MasterLayoutPage.cshtml";
}

<!DOCTYPE html>

<h2>Edit Shop</h2>

@section styles
    {
    <style>
        .field-validation-error {
            color: red;
        }
    </style>
}
<link href="~/Content/BackEnd/css/jqueryUI.css" rel="stylesheet" />

<section class="wrapper">
    <div class="form-w3layouts">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Edit Shop
                    </header>
                    <div class="panel-body">
                        <div class="position-center">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    <hr />
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.Id)
                                    @{
                                        if (ViewBag.Message == null)
                                        { }
                                        else
                                        {
                                            <div class="alert alert-success" role="alert">
                                                <strong>@ViewBag.Message</strong>
                                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                        }
                                    }

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.BuildingId, "Building")

                                        @Html.DropDownListFor(model => model.BuildingId, new SelectList(ViewBag.Building, "Id", "Name"), "------Select Building------", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.BuildingId)
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.CityId, "City")

                                        @Html.DropDownListFor(model => model.CityId, new SelectList(ViewBag.City, "Id", "Name"), "------Select City------", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.CityId)
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.AreaId, "Area")

                                        @Html.DropDownListFor(model => model.AreaId, new SelectList(ViewBag.Area, "Id", "Name"), "------Select Area------", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.AreaId)
                                    </div>
                                    @*<div class="form-group">
                                            @Html.LabelFor(t => t.ShopTypeId, "Shop Type")

                                            @Html.DropDownListFor(t => t.ShopTypeId, new SelectList(ViewBag.ShopType, "Id", "ShopTypeDescription"), "------Select Type------", new { @class = "form-control" })
                                            @Html.ValidationMessageFor(t => t.ShopTypeId)
                                        </div>*@
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Name, "Shop No.")

                                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                    </div>

                                    <button type="submit" class="btn btn-info">Save</button>

                                    <br /><br />


                                </div>
                            }
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>

<div>
    @Html.ActionLink("Back to List", "ViewShop")
</div>

