
@model TenantManagementSystem.Models.Admin
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin Registration | SMS</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/Content/BackEnd/images/uni.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="University, Result" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <link href="~/Content/BackEnd/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/BackEnd/css/style.css" rel='stylesheet' type='text/css' />
    <link href="~/Content/BackEnd/css/style-responsive.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/BackEnd/css/font.css" type="text/css" />
    <link href="~/Content/BackEnd/css/font-awesome.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/BackEnd/css/morris.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/BackEnd/css/monthly.css">
    <script src="~/Content/BackEnd/js/jquery2.0.3.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Content/BackEnd/js/raphael-min.js"></script>
    <script src="~/Content/BackEnd/js/morris.js"></script>
    <style>

        .field-validation-error {
            color: #C04442;
            font-size: 12px;
            font-weight: 300;
        }
    </style>
</head>
<body>
    <div class="main">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="LoginForm">
                        <div class="panel panel-primary">
                            <div class="panel-heading">Admin Registration</div>
                            <div class="panel-body">
                                @using (Html.BeginForm("Login", "Admin", FormMethod.Post))
                                {
                                    <div class="form-group">
                                        @Html.LabelFor(a => a.Name)
                                        @Html.TextBoxFor(a => a.Name, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(a => a.Name)
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(a => a.UserName)
                                        @Html.TextBoxFor(a => a.UserName, new { @class = "form-control" })
                                        @*@Html.ValidationMessageFor(a => a.UserName)*@
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(a => a.Password)
                                        @Html.PasswordFor(a => a.Password, new { @class = "form-control" })
                                        @*@Html.ValidationMessageFor(a => a.Password)*@
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(a => a.ConfirmPassword)
                                        @Html.PasswordFor(a => a.ConfirmPassword, new { @class = "form-control" })
                                        @*@Html.ValidationMessageFor(a => a.ConfirmPassword)*@
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(t => t.CompanyId)
                                        @Html.DropDownListFor(t => t.CompanyId, new SelectList(ViewBag.Company, "CompanyId", "Name"), "------Select Company------", new { @class = "form-control" })

                                        @Html.ValidationMessageFor(t => t.CompanyId)
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(t => t.BranchId)
                                        @Html.DropDownListFor(t => t.BranchId, new SelectList(ViewBag.Branch, "BranchId", "Name"), "------Select Branch------", new { @class = "form-control" })

                                        @Html.ValidationMessageFor(t => t.BranchId)
                                    </div>

                                    <input type="submit" class="btn btn-primary btn-sm" value="Register" />
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/BackEnd/js/bootstrap.js"></script>
    <script src="~/Content/BackEnd/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="~/Content/BackEnd/js/scripts.js"></script>
    <script src="~/Content/BackEnd/js/jquery.slimscroll.js"></script>
    <script src="~/Content/BackEnd/js/jquery.nicescroll.js"></script>
    <script src="~/Content/BackEnd/js/jquery.scrollTo.js"></script>

    <script>document.getElementById('Name').value = '';
        document.getElementById('UserName').value = '';
        document.getElementById('Password').value = '';
        document.getElementById('ConfirmPassword').value = '';</script>
</body>
</html>
