@model TenantManagementSystem.Models.Area
@{
    ViewBag.Title = "Area Save";
    Layout = "~/Views/Shared/_MasterLayoutPage.cshtml";
}

@section styles
{
    <style>
        .field-validation-error {
            color: red;
        }

        .required::after {
            content: "*";
            font-weight: bold;
            color: red;
        }
    </style>
}

<section class="wrapper">
    <div class="form-w3layouts">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Save Area
                    </header>
                    <div class="panel-body">
                        <div class="position-center">
                            @{
                                if (ViewBag.Message == null)
                                { }
                                else
                                {
                                    <div class="alert alert-success" role="alert">
                                        <strong>@ViewBag.Message</strong>
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                }
                            }
                            @using (Html.BeginForm(null, null, FormMethod.Post))
                            {
                                <div class="form-group" style="display:none">
                                    @Html.LabelFor(t => t.CompanyId, "Company Name", new { @class = "required" })
                                    @Html.DropDownListFor(t => t.CompanyId, new SelectList(ViewBag.Company, "CompanyId", "Name"), "------Select Company------", new { @class = "form-control" })

                                    @Html.ValidationMessageFor(t => t.CompanyId)
                                </div>
                                <div class="form-group" style="display:none">
                                    @Html.LabelFor(t => t.BranchId, "Branch Name", new { @class = "required" })
                                    @Html.DropDownListFor(t => t.BranchId, new SelectList(ViewBag.Branch, "BranchId", "Name"), "------Select Branch-----", new { @class = "form-control" })

                                    @Html.ValidationMessageFor(t => t.BranchId)
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(t => t.CityId, "City Name", new { @class = "required" })
                                    @Html.DropDownListFor(t => t.CityId, new SelectList(ViewBag.City, "Id", "Name"), "------Select City-----", new { @class = "form-control" })

                                    @Html.ValidationMessageFor(t => t.CityId)
                                </div>
                                @*<div class="form-group">
                                        @Html.LabelFor(t => t.CountryId)
                                        @Html.DropDownListFor(t => t.CountryId, new SelectList(ViewBag.Country, "CountryId", "Name"), "------Select Country-----", new { @class = "form-control" })

                                        @Html.ValidationMessageFor(t => t.CountryId)
                                    </div>*@
                                <div class="form-group">
                                    @Html.LabelFor(t => t.Name, new { @class = "required" })
                                    @Html.TextBoxFor(t => t.Name, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(t => t.Name)
                                </div>

                                <button type="submit" class="btn btn-info">Save</button>
                            }
                        </div>

                        <br /><br />



                    </div>
                </section>

            </div>
        </div>
    </div>
</section>

@section scripts
{
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

    <script>
